require 'bundler/setup'
require 'helix_cli/build_task'
require 'rake/testtask'
require_relative '../shared.rb'

# For Windows
$stdout.sync = true

HelixCLI::BuildTask.new do |t|
  t.build_root = File.expand_path("../..", __dir__)
  t.helix_lib_dir = File.expand_path("../../ruby/windows_build", __dir__)
  t.pre_build = HelixRuntime::Tests.pre_build
end

task :benchmark => :build do
  exec "ruby -Ilib benchmark.rb"
end

Rake::TestTask.new(:test) do |t|
  t.libs << "test"
  t.libs << "lib"
  t.test_files = FileList["test/**/*_test.rb"]
end

task :test => :build

task "test:all" do
  ['RUST', 'RAILS_4_2', 'RAILS_5'].each do |impl|
    sh({ 'IMPLEMENTATION' => impl }, 'rake test')
  end
end

task :default => "test:all"
